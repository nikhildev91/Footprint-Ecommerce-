<h1 style="text-align: center;">Manage Products</h1>


<div class="co1-12 mt-3">

  

  <table class="table table-bordered mt-2 tb_datatable">
    <thead>
      <tr>
        <th>Product</th>
        <th>Product ID</th>
        <th>MRP</th>
        <th>Stock</th>
        <th>Category</th>
        <th>Sub-Category</th>
        <th>Brand</th>
        <th>Action</th>
        
      </tr>
    </thead>
    <tbody id="myTable">
      {{#each allProducts}}
      <tr>
        <td>
         
          <img style="width: 100px; height: 100px;" src="/product-images/{{this._id}}.jpg" alt="">
         
           {{this.productTitle}}</td>
        <td>{{this._id}}</td>
        <td>{{this.price}}</td>
        <td>{{this.quantity}}</td>
        <td>{{this.category}}</td>
        <td>{{this.subCategory}}</td>
        <td>{{this.brand}}</td>
        <td><a href="/admin/edit-product/{{this._id}}"><i class="fas fa-edit" style="font-size: 25px; color: blue;"></i> </a><a href="/admin/delete-product/{{this._id}}"><i class="fas fa-trash ml-3" style="font-size: 25px; color: red;"></i></a></td>
         </tr>
         {{/each}}
     
    </tbody>
  </table>
  

</div>