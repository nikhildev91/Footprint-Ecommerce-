  <h1 style="text-align:center">Edit Product</h1>

  <div class="card p-5">

      <form class="form-validation" style="display: flex;flex-direction: column;align-items: center;" action="/admin/edit-product/{{foundProduct._id}}" enctype="multipart/form-data" method="post">
          <div class="form-group row" style="min-width: 600px;">
              <label for="inputEmail3" class="col-md-4 form-control-label">Product Title<span
                      class="text-danger">*</span></label>
              <div class="col-md-7">
                  <input type="text" class="form-control" id="productTitle" placeholder="Product Title"
                      name="productTitle" value="{{foundProduct.productTitle}}">
              </div>
          </div>
          <div class="form-group row" style="min-width: 600px;">
              <label for="hori-pass1" class="col-md-4 form-control-label">Product Description<span
                      class="text-danger">*</span></label>
              <div class="col-md-7">
  <textarea class="form-control" rows="5" id="example-textarea" name="productDescription" placeholder="Product Description">{{foundProduct.productDescription}}</textarea>

              </div>
          </div>
          <div class="form-group row" style="min-width: 600px;">
              <label for="hori-pass2" class="col-md-4 form-control-label">Brand Name
                  <span class="text-danger">*</span></label>
              <div class="col-md-7">
                      <select name="brand" class="form-control select2">
                          <option>Select</option>
                                                <option value="Adidas">Adidas</option>
                                                <option value="Nike">Nike</option>
                                                <option value="Puma">Puma</option>
                                                <option value="GUCCI">GUCCI</option>
                                                <option value="MERREL">MERREL</option>
                                            </select>
                                           
              </div>
          </div>

             <div class="form-group row" style="min-width: 600px;">
              <label for="hori-pass2" class="col-md-4 form-control-label">Category
                  <span class="text-danger">*</span></label>
              <div class="col-md-7">
                      <select name="category" class="form-control select2">
                          <option value="">Select</option>
                                                <option value="Men">Men</option>
                                                <option value="Women">Women</option>
                                                <option value="Kids">Kids</option>
                                                
                                            </select>
                                           
              </div>
          </div>

             <div class="form-group row" style="min-width: 600px;">
              <label for="hori-pass2" class="col-md-4 form-control-label">Sub-Category
                  <span class="text-danger">*</span></label>
              <div class="col-md-7">
                      <select name="subCategory" class="form-control select2">
                          <option value="">Select</option>
                                                <option value="Formal">Formal</option>
                                                <option value="Casual">Casual</option>
                                                <option value="Sports">Sports</option>
                                            </select>
                                           
              </div>
          </div>

          <div class="form-group row" style="min-width: 600px;">
              <label for="webSite" class="col-md-4 form-control-label">Colour<span
                      class="text-danger">*</span></label>
              <div class="col-md-7">
                  <input type="text"class="form-control" id="colour" placeholder="Colour" name="colour" value="{{foundProduct.colour}}">
              </div>
          </div>

                 <div class="form-group row" style="min-width: 600px;">
              <label for="webSite" class="col-md-4 form-control-label">Meterial<span
                      class="text-danger">*</span></label>
              <div class="col-md-7">
                  <input type="text" class="form-control" id="meterial" placeholder="Meterial" name="material" value="{{foundProduct.material}}">
              </div>
          </div>




                    <div class="form-group row" style="min-width: 600px;">
              <label for="hori-pass2" class="col-md-4 form-control-label">Size
                  <span class="text-danger">*</span></label>
              <div class="col-md-7">
                      <select class="form-control select2" name="size[]" multiple="multiple">
                          
                                                <option value="5">5</option>
                                                <option value="6">6</option>
                                                <option value="7">7</option>
                                            </select>
                                           
              </div>
          </div>



          <div class="form-group row" style="min-width: 600px;">
              <label for="webSite" class="col-md-4 form-control-label">Quantity<span
                      class="text-danger">*</span></label>
              <div class="col-md-7">
                  <input type="text" class="form-control" id="webSite" placeholder="Quantity" name="quantity" value="{{foundProduct.quantity}}">
              </div>
          </div>

          <div class="form-group row" style="min-width: 600px;">
              <label for="webSite" class="col-md-4 form-control-label">Price<span
                      class="text-danger">*</span></label>
              <div class="col-md-7">
                  <input type="text"class="form-control" id="webSite" placeholder="Price" name="price" value="{{foundProduct.price}}">
              </div>
          </div>

          <div class="form-group row" style="min-width: 600px;">
              <label for="webSite" class="col-md-4 form-control-label">Images<span
                      class="text-danger">*</span></label>
              <div class="col-md-7">
                 <input type="file" class="filestyle" data-btnClass="btn-primary" name="image1">
              </div>
          </div>

          <div class="form-group row justify-content-end" style="min-width: 600px;">
              <div class="col-md-8">
                  
                  <button  type="submit" class="btn btn-primary waves-effect waves-light mr-1">
                      Submit
                  </button>
                  <button type="reset" class="btn btn-danger waves-effect">
                      Cancel
                  </button>
              </div>
          </div>
      </form>

  </div>